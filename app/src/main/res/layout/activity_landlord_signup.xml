<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LandlordSignup">

    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="48dp"
        android:src="@drawable/rentbook_icon" />

    <TextView
        android:id="@+id/logo_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="56dp"
        android:layout_toRightOf="@id/logo_image"
        android:gravity="center"
        android:text="RentBook"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/sign_up_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Landlord Signup"
        android:layout_below="@id/logo_image"
        android:textSize="24sp"
        android:layout_marginStart="16sp"
        android:layout_marginEnd="16sp"
        android:layout_marginTop="32sp"
        android:textColor="@color/rentBookColor"/>

    <EditText
        android:id="@+id/landlord_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sign_up_header"
        android:layout_marginStart="16sp"
        android:layout_marginEnd="16sp"
        android:layout_marginTop="8dp"
        android:hint="Name"
        android:inputType="text"/>

    <EditText
        android:id="@+id/landlord_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/landlord_name"
        android:layout_marginStart="16sp"
        android:layout_marginEnd="16sp"
        android:layout_marginTop="8dp"
        android:hint="Email"
        android:inputType="textWebEmailAddress"/>

    <EditText
        android:id="@+id/landlord_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/landlord_email"
        android:layout_marginStart="16sp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16sp"
        android:hint="Phone number"
        android:inputType="phone" />

   <TextView
       android:id="@+id/gender_header"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Gender"
       android:layout_below="@id/landlord_phone_number"
       android:layout_marginStart="16dp"
       android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
       />
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gender_header"
        android:layout_marginStart="16sp"
        >
        <RadioButton
            android:id="@+id/radio_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"/>
        <RadioButton
            android:id="@+id/radio_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"/>
    </RadioGroup>


</RelativeLayout>