<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LandlordSignup"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">
        <ImageView
            android:id="@+id/logo_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="48dp"
            android:src="@drawable/rentbook_icon" />

        <TextView
            android:id="@+id/logo_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="56dp"
            android:layout_toRightOf="@id/logo_image"
            android:gravity="center"
            android:text="RentBook"
            android:textColor="@color/black"
            android:textSize="35sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/sign_up_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Landlord Signup"
            android:layout_below="@id/logo_image"
            android:textSize="24sp"
            android:layout_marginStart="16sp"
            android:layout_marginEnd="16sp"
            android:layout_marginTop="32sp"
            android:textColor="@color/rentBookColor"/>

        <EditText
            android:id="@+id/landlord_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sign_up_header"
            android:layout_marginStart="16sp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16sp"
            android:background="@color/cardview_dark_background"
            android:hint="Name"
            android:inputType="text"
            android:minHeight="48dp"
            android:padding="10dp" />

        <EditText
            android:id="@+id/landlord_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/landlord_name"
            android:layout_marginStart="16sp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16sp"
            android:background="@color/cardview_dark_background"
            android:hint="Email"
            android:inputType="textWebEmailAddress"
            android:minHeight="48dp"
            android:padding="10dp" />

        <EditText
            android:id="@+id/landlord_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/landlord_email"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:background="@color/cardview_dark_background"
            android:hint="Phone number"
            android:inputType="phone"
            android:minHeight="48dp"
            android:padding="10dp" />

        <TextView
            android:id="@+id/gender_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:layout_below="@id/landlord_phone_number"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="0dp"
            android:padding="10dp"
            android:textColor="@color/black"
            />
        <RadioGroup
            android:id="@+id/gender_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gender_header"
            android:layout_marginStart="16sp"
            android:layout_marginBottom="16dp"
            >

            <RadioButton
                android:id="@+id/radio_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/black"
                android:minHeight="48dp"
                android:text="Male"
                android:textColor="@color/black" />

            <RadioButton
                android:id="@+id/radio_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/black"
                android:minHeight="48dp"
                android:text="Female"
                android:textColor="@color/black" />
        </RadioGroup>

        <EditText
            android:id="@+id/number_of_proprerties"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/gender_options"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@color/cardview_dark_background"
            android:hint="Number of properties"
            android:inputType="number"
            android:minHeight="48dp"
            android:padding="10dp" />

        <Button
            android:id="@+id/landlord_signup_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/number_of_proprerties"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@color/rentBookColor"
            android:padding="20dp"
            android:text="Sign up"
            android:textSize="20dp" />


    </RelativeLayout>



</ScrollView>