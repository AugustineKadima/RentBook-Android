<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PropertyAndTenants">

    <Button
        android:id="@+id/property_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Property"
        android:textSize="20dp"
        android:padding="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:background="#7b2105"
        android:textAlignment="textStart"
        />
    <Button
        android:id="@+id/tenants_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tenants"
        android:textSize="20dp"
        android:padding="20dp"
        android:layout_below="@id/property_btn"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:background="#7b2105"
        android:textAlignment="textStart"
        />
    <Button
        android:id="@+id/add_property_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Property"
        android:textSize="20dp"
        android:padding="20dp"
        android:layout_below="@id/tenants_btn"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:background="#7b2105"
        android:textAlignment="textStart"
        />
    <Button
        android:id="@+id/add_tenant_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Tenant"
        android:textSize="20dp"
        android:padding="20dp"
        android:layout_below="@id/add_property_btn"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:background="#7b2105"
        android:textAlignment="textStart"
        />


</RelativeLayout>