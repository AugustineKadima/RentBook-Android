<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PropertyAndTenants"
    android:background="@color/white">

    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/rentbook_icon"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="16dp"
        />

    <TextView
        android:id="@+id/logo_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="56dp"
        android:layout_toRightOf="@id/logo_image"
        android:gravity="center"
        android:textSize="35sp"
        android:textColor="@color/black"
        android:text="RentBook"
        android:textStyle="bold"
        />


    <Button
        android:id="@+id/property_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Property"
        android:textSize="20dp"
        android:padding="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:background="#7b2105"
        android:textAlignment="textStart"
        android:layout_below="@id/logo_image"
        />
    <Button
        android:id="@+id/tenants_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tenants"
        android:textSize="20dp"
        android:padding="20dp"
        android:layout_below="@id/property_btn"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:background="#7b2105"
        android:textAlignment="textStart"
        />
    <Button
        android:id="@+id/add_property_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Property"
        android:textSize="20dp"
        android:padding="20dp"
        android:layout_below="@id/tenants_btn"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:background="@color/rentBookColor"
        android:textAlignment="textStart"
        />
    <Button
        android:id="@+id/add_tenant_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_tenant"
        android:textSize="20dp"
        android:padding="20dp"
        android:layout_below="@id/add_property_btn"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:background="@color/rentBookColor"
        android:textAlignment="textStart"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_tenants"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_property"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>